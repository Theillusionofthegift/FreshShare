<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/plateImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:padding="@dimen/dp20_plate_image"
        android:src="@drawable/freshplate" />

    <TextView
        android:id="@+id/plateName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/plateImage"
        android:text="@string/steak_fajita_plate"
        android:textSize="@dimen/sp30_text"
        android:textColor="@color/s_text_dark"
        android:layout_centerInParent="true" />

    <TextView
        android:id="@+id/plateDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp20_plate_image"
        android:layout_below="@+id/plateName"
        android:text="@string/lorem_ipsum" />

    <TextView
        android:id="@+id/plateProvider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp20_plate_image"
        android:layout_below="@+id/plateDescription"
        android:text="@string/vendor_info"
        android:textSize="@dimen/sp18_text" />

</RelativeLayout>